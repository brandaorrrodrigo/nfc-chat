# ============================================================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ============================================================================

# Node Environment
NODE_ENV=development

# ============================================================================
# POSTGRES
# ============================================================================
POSTGRES_USER=nfv_user
POSTGRES_PASSWORD=nfv_password_change_in_production
POSTGRES_DB=nfv_database
POSTGRES_PORT=5432

# ============================================================================
# REDIS
# ============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_in_production
REDIS_MAX_MEMORY=512mb

# ============================================================================
# MINIO (S3-COMPATIBLE)
# ============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123_change_in_production
MINIO_APP_USER=nfvapp
MINIO_APP_PASSWORD=nfvapp123_change_in_production
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DOMAIN=minio.localhost
MINIO_SERVER_URL=http://minio:9000

# ============================================================================
# API
# ============================================================================
API_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============================================================================
# STORAGE
# ============================================================================
STORAGE_TYPE=minio
MAX_FILE_SIZE=104857600

# ============================================================================
# TENSORFLOW
# ============================================================================
TF_BACKEND=cpu
TF_THREADS=4

# ============================================================================
# PROCESSING
# ============================================================================
MAX_CONCURRENT_VIDEOS=2
WORKER_CONCURRENCY=2

# ============================================================================
# NGINX
# ============================================================================
HTTP_PORT=80
HTTPS_PORT=443
