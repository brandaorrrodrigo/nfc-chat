# ===== Flask Configuration =====
FLASK_ENV=development
FLASK_APP=mediapipe_service.py
HOST=0.0.0.0
PORT=5000
DEBUG=true

# ===== MediaPipe Model Settings =====
# Model Complexity: 0=lite (fast), 1=full (balanced), 2=heavy (accurate)
MODEL_COMPLEXITY=1

# Confidence thresholds (0.0 - 1.0)
MIN_DETECTION_CONFIDENCE=0.7
MIN_TRACKING_CONFIDENCE=0.7

# ===== Performance Settings =====
# Maximum number of workers for Gunicorn
MAX_WORKERS=4

# Request timeout in seconds
TIMEOUT_SECONDS=120

# Maximum frames per single request
MAX_FRAMES_PER_REQUEST=20

# ===== Logging =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ===== Temporary Directory =====
# Directory for temporary frame storage
TEMP_DIR=/tmp/mediapipe

# ===== Cache Settings (Optional) =====
# Enable Redis cache
ENABLE_CACHE=false

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL in seconds (1 hour default)
CACHE_TTL=3600

# ===== Security Settings =====
# Maximum image size in MB
MAX_IMAGE_SIZE_MB=10

# Allowed image extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp

# ===== Metrics (Optional) =====
# Enable Prometheus metrics
ENABLE_METRICS=false

# Metrics port (if different from main port)
METRICS_PORT=8000

# ===== Development Settings =====
# Enable hot reload (development only)
FLASK_DEBUG=true

# Enable verbose logging
VERBOSE=false
