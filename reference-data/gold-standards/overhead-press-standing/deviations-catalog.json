    {
      "id": "push_press_instead_of_strict",
      "name": "Usar Leg Drive (Push Press) em Vez de Strict Press",
      "name_en": "Using Leg Drive (Push Press) Instead of Strict Press",
      "description": "Usa dip and drive das pernas para ajudar no press, transformando em push press ao invés de strict overhead press",
      "aliases": ["leg drive", "push press", "dip and drive", "usando pernas"],

      "biomechanical_cause": {
        "primary": "Carga excessiva ou tentativa de gerar momentum",
        "secondary": ["Fraqueza de ombros", "Fadiga", "Má instrução sobre diferença"],
        "risk_factors": ["Ego lifting", "Confusão entre variações"]
      },

      "detection_method": {
        "primary": "knee_flexion_dip > 10° before press initiation",
        "secondary": "vertical_velocity_bar > expected from upper body only",
        "requires_landmarks": ["knee", "bar_position"],
        "calculation": "knee_angle_change before bar_begins_moving_upward",
        "detection_phase": "transition from rack_position to press_initial"
      },

      "severity_thresholds": {
        "mild": {"knee_dip": "5-10 degrees (slight knee bend)", "injury_risk": "low", "performance_impact": "Not a strict press, but minor leg assist", "intervention": "Conscious control, reduce load"},
        "moderate": {"knee_dip": "10-20 degrees (clear dip)", "injury_risk": "low", "performance_impact": "This is a push press, not strict", "intervention": "Reduce load significantly"},
        "severe": {"knee_dip": ">20 degrees (deep dip and drive)", "injury_risk": "low", "performance_impact": "Completely different exercise", "intervention": "Wrong exercise, re-teach strict press"}
      },

      "evidence_base": {
        "prevalence": "30-50% use some leg drive when fatigued or load is heavy",
        "biomechanical_impact": "Leg drive can add 15-25% to overhead press capability",
        "correction_efficacy": "Easily correctable with load reduction"
      },

      "corrective_protocol": {
        "immediate_cues": ["No leg drive", "Strict press", "Knees locked", "Upper body only"],
        "load_modification": ["Reduce load by 15-20% to allow strict press"]
      }
    },

    {
