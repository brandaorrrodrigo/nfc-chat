      "severity_thresholds": {
        "mild": {
          "forward_drift": "3-6 cm",
          "injury_risk": "low-moderate",
          "performance_impact": "Increased moment arm, ~10-15% harder",
          "intervention": "Lat activation, setup closer"
        },
        "moderate": {
          "forward_drift": "6-10 cm",
          "injury_risk": "moderate (significant lumbar loading increase)",
          "performance_impact": "~20-30% harder, very inefficient",
          "intervention": "Major setup correction"
        },
        "severe": {
          "forward_drift": ">10 cm (barra swings forward significantly)",
          "injury_risk": "high (may need to drop bar, extreme lumbar moment)",
          "performance_impact": "May fail lift, extremely dangerous",
          "intervention": "Stop, fundamental re-teaching"
        }
      },

      "evidence_base": {
        "prevalence": "20-35% especially in beginners",
        "biomechanical_impact": "Each cm forward increases lumbar moment by ~1-2% body weight (McGill SM, 2015)",
        "correction_efficacy": "High with proper cueing"
      },

      "corrective_protocol": {
        "immediate_cues": ["Bar drags up legs", "Pull bar back into you", "Activate lats", "Bar stays over midfoot"],
        "corrective_exercises": [
          {
            "name": "Straight-arm lat pulldowns",
            "target": "Lat activation for pulling bar into body",
            "sets": 3,
            "reps": 12,
            "frequency": "3x/week"
          }
        ]
      }
    },

