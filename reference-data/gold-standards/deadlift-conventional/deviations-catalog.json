    {
      "id": "lumbar_flexion",
      "name": "Flexão Lombar (Perda de Lordose Neutra)",
      "name_en": "Lumbar Flexion (Loss of Neutral Lordosis)",
      "description": "Coluna lombar flexiona (arredonda), perdendo curvatura neutra sob carga. DESVIO CRÍTICO DE SEGURANÇA.",
      "aliases": ["rounded lower back", "cat back", "flexed spine", "costas arredondadas"],

      "biomechanical_cause": {
        "primary": "Core fraco ou má ativação de extensores lombares",
        "secondary": ["Carga excessiva", "Fadiga", "Má técnica de setup", "Mobilidade inadequada de quadril", "Isquiotibiais curtos"],
        "risk_factors": ["Histórico de dor lombar", "Core fraco", "Carga >90% 1RM", "Fadiga extrema"]
      },

      "detection_method": {
        "primary": "lumbar_curvature < neutral_lordosis - 10°",
        "secondary": "lumbar_angle_change > 15° from setup to pull",
        "requires_landmarks": ["lumbar_spine", "sacrum", "thoracic_spine"],
        "calculation": "angle(lumbar_vector) compared to neutral_baseline",
        "detection_phase": "setup, pull_initial, and lockout"
      },

      "severity_thresholds": {
        "mild": {
          "lumbar_flexion": "5-10 degrees from neutral",
          "injury_risk": "moderate",
          "performance_impact": "Increased disc stress but controllable",
          "intervention": "Reduce load, core strengthening"
        },
        "moderate": {
          "lumbar_flexion": "10-20 degrees from neutral",
          "injury_risk": "high (disc herniation risk)",
          "performance_impact": "Dangerous spinal loading (3-4x normal shear stress)",
          "intervention": "Stop, significant load reduction"
        },
        "severe": {
          "lumbar_flexion": ">20 degrees (significant rounding)",
          "injury_risk": "CRITICAL (imminent disc injury risk)",
          "performance_impact": "Extremely dangerous, potential catastrophic injury",
          "intervention": "STOP IMMEDIATELY, do not complete lift"
        }
      },

      "evidence_base": {
        "prevalence": "15-30% under heavy loads (>85% 1RM)",
        "injury_correlation": "Lumbar flexion increases disc shear by 300-400N per 10° (McGill SM, 2015)",
        "biomechanical_impact": "Most dangerous deadlift deviation, direct path to disc herniation",
        "correction_efficacy": "Requires fundamental retraining, core strengthening"
      },

      "corrective_protocol": {
        "immediate_cues": ["Chest up", "Proud chest", "Arch hard", "Pull slack out of bar"],
        "corrective_exercises": [
          {
            "name": "Romanian deadlift (RDL)",
            "target": "Hip hinge pattern with maintained lumbar neutrality",
            "sets": 4,
            "reps": 8,
            "frequency": "3x/week"
          },
          {
            "name": "Plank variations (especially weighted)",
            "target": "Anti-extension core strength",
            "sets": 3,
            "duration": "45-60s",
            "frequency": "Daily"
          },
          {
            "name": "Bird dogs",
            "target": "Lumbar stability",
            "sets": 3,
            "reps": 10,
            "frequency": "Daily"
          }
        ]
      }
    },

    {
      "id": "hips_rise_first",
      "name": "Quadris Sobem Primeiro",
      "name_en": "Hips Rise First (Squat the Deadlift)",
      "description": "Quadris estendem primeiro no início do pull, antes dos ombros, causando o levantamento em duas fases",
      "aliases": ["squat the deadlift", "stripper deadlift", "two-stage lift"],

      "biomechanical_cause": {
        "primary": "Setup inadequado (quadris muito baixos) ou má coordenação",
        "secondary": ["Tentativa de 'leg press' a barra", "Quadríceps tentando dominar movimento", "Carga muito pesada"],
        "risk_factors": ["Setup muito baixo (squatting)", "Falta de força de cadeia posterior"]
      },

      "detection_method": {
        "primary": "hip_extension_rate > shoulder_rise_rate in first 20% of pull",
        "secondary": "hip_angle_change > knee_angle_change by >15° in initial pull",
        "requires_landmarks": ["hip", "shoulder", "knee"],
        "calculation": "compare(delta_hip_height/dt, delta_shoulder_height/dt)",
        "detection_phase": "pull_initial (0-30%)"
      },

      "severity_thresholds": {
        "mild": {
          "hip_shoulder_differential": "Hips rise 10-20% faster than shoulders",
          "injury_risk": "low-moderate",
          "performance_impact": "Slightly inefficient, becomes more back-dominant",
          "intervention": "Setup adjustment"
        },
        "moderate": {
          "hip_shoulder_differential": "Hips rise 20-40% faster",
          "injury_risk": "moderate (increased lumbar loading)",
          "performance_impact": "Two-phase lift, significant efficiency loss",
          "intervention": "Higher hip setup, reduce load"
        },
        "severe": {
          "hip_shoulder_differential": "Hips rise >40% faster (essentially lock out legs first)",
          "injury_risk": "high (excessive lumbar loading in compromised position)",
          "performance_impact": "Becomes stiff-leg deadlift from disadvantaged position",
          "intervention": "Complete setup re-teaching"
        }
      },

      "evidence_base": {
        "prevalence": "30-40% with improper setup",
        "biomechanical_impact": "Shifts load entirely to lumbar extensors after legs extend",
        "correction_efficacy": "High with setup correction"
      },

      "corrective_protocol": {
        "immediate_cues": ["Hips and shoulders rise together", "Lead with chest", "Push floor away"],
        "corrective_exercises": [
          {
            "name": "Deficit deadlifts (standing on plates)",
            "target": "Force proper pulling mechanics from extended range",
            "sets": 3,
            "reps": 5,
            "frequency": "2x/week"
          }
        ]
      }
    },

    {
