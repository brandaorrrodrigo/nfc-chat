    {
      "id": "shallow_depth",
      "name": "Profundidade Inadequada",
      "name_en": "Insufficient Depth",
      "description": "Não alcança profundidade mínima (crease do quadril abaixo da linha do joelho para parallel)",
      "aliases": ["quarter squat", "half squat", "high squat", "agachamento raso"],

      "biomechanical_cause": {
        "primary": "Limitação de mobilidade (tornozelo, quadril) ou medo de profundidade",
        "secondary": [
          "Carga excessiva",
          "Dor ou desconforto",
          "Má técnica aprendida",
          "Insegurança com carga"
        ],
        "risk_factors": [
          "Mobilidade inadequada",
          "Ego lifting (carga > capacidade)",
          "Falta de instrução"
        ]
      },

      "detection_method": {
        "primary": "hip_crease_y > knee_top_y + 2cm at lowest point",
        "secondary": "knee_flexion_angle_max > 100° (should be ~85-90° for parallel)",
        "requires_landmarks": ["hip", "knee", "ankle"],
        "calculation": "compare(hip_crease_height, knee_height)",
        "detection_phase": "isometric_bottom"
      },

      "severity_thresholds": {
        "mild": {
          "depth_deficit": "Hip crease 2-5cm above knee",
          "knee_angle_at_bottom": "95-105 degrees",
          "injury_risk": "low",
          "performance_impact": "Reduced glute activation (15-20%)",
          "intervention": "Mobility work, depth cueing"
        },
        "moderate": {
          "depth_deficit": "Hip crease 5-10cm above knee (half squat)",
          "knee_angle_at_bottom": "105-120 degrees",
          "injury_risk": "low (but incomplete training stimulus)",
          "performance_impact": "Significantly reduced glute/hamstring activation (30-40%)",
          "intervention": "Reduce load, goblet squats to depth"
        },
        "severe": {
          "depth_deficit": "Hip crease >10cm above knee (quarter squat)",
          "knee_angle_at_bottom": ">120 degrees",
          "injury_risk": "Increased patellofemoral stress (high quad load at short ROM)",
          "performance_impact": "Minimal posterior chain activation, incomplete movement",
          "intervention": "Box squats to learn depth, significant load reduction"
        }
      },

      "associated_compensations": [
        "excessive_load",
        "heel_rise_avoidance",
        "mobility_compensation"
      ],

      "evidence_base": {
        "prevalence": "30-50% don't reach parallel (Schoenfeld BJ, 2010)",
        "injury_correlation": "Paradoxically, deeper squats may be safer for knees (Hartmann H et al, 2013)",
        "biomechanical_impact": "Reduces glute activation by 30-40% vs full depth (Caterisano A et al, 2002)",
        "correction_efficacy": "Depth immediately improvable with load reduction or box squats"
      },

      "corrective_protocol": {
        "immediate_cues": [
          "Sit back and down",
          "Hip crease below knee",
          "Aim for depth, not weight"
        ],
        "corrective_exercises": [
          {
            "name": "Box squats (adjustable height)",
            "target": "Learn depth reference point",
            "sets": 4,
            "reps": 8,
            "frequency": "Every squat session",
            "progression": "Lower box height gradually"
          },
          {
            "name": "Goblet squat",
            "target": "Counterbalance allows depth",
            "sets": 3,
            "reps": 10,
            "frequency": "3x/week",
            "progression": "Increase load"
          },
          {
            "name": "Pause squats at parallel",
            "target": "Reinforce proper depth",
            "sets": 3,
            "reps": 5,
            "frequency": "2x/week",
            "progression": "Increase pause duration"
          }
        ],
        "load_modification": [
          "Reduce load to 50-60% to achieve depth",
          "Gradually increase load while maintaining depth"
        ],
        "return_to_exercise_criteria": [
          "Consistently achieves parallel or below",
          "No compensations at depth"
        ]
      }
    },

    {
      "id": "knee_hyperextension_top",
      "name": "Hiperextensão de Joelho no Topo",
      "name_en": "Knee Hyperextension at Top",
      "description": "Joelhos travam com hiperextensão no lockout do topo",
      "aliases": ["knee lockout excessive", "knee snap", "joelhos travados"],

      "biomechanical_cause": {
        "primary": "Hipermobilidade articular ou má consciência de lockout neutro",
        "secondary": [
          "Fraqueza de quadríceps (compensação com lockout passivo)",
          "Padrão motor inadequado"
        ],
        "risk_factors": [
          "Hipermobilidade generalizada",
          "Sexo feminino (mais comum)",
          "Histórico de lesão de joelho"
        ]
      },

      "detection_method": {
        "primary": "knee_angle > 185° at top",
        "secondary": "knee_y displacement posterior beyond neutral",
        "requires_landmarks": ["hip", "knee", "ankle"],
        "calculation": "angle(hip, knee, ankle) at eccentric_top phase",
        "detection_phase": "eccentric_top and after concentric lockout"
      },

      "severity_thresholds": {
        "mild": {
          "hyperextension_angle": "180-185 degrees",
          "injury_risk": "low",
          "performance_impact": "Minimal",
          "intervention": "Cueing"
        },
        "moderate": {
          "hyperextension_angle": "185-190 degrees",
          "injury_risk": "moderate (posterior knee stress)",
          "performance_impact": "Reduced stability",
          "intervention": "Conscious control of lockout"
        },
        "severe": {
          "hyperextension_angle": ">190 degrees",
          "injury_risk": "high (LCA posterior stress, PCL)",
          "performance_impact": "Instability",
          "intervention": "Strengthen quads, avoid full lockout"
        }
      },

      "evidence_base": {
        "prevalence": "10-15% with general hypermobility (Russek LN, 1999)",
        "injury_correlation": "Associated with increased ACL injury risk in hypermobile athletes",
        "correction_efficacy": "Easily correctable with cueing and motor control"
      },

      "corrective_protocol": {
        "immediate_cues": [
          "Soft knees at top",
          "Maintain micro-bend",
          "Don't snap knees back"
        ],
        "corrective_exercises": [
          {
            "name": "Quad strengthening (terminal knee extension)",
            "target": "Strengthen quads to control lockout actively",
            "sets": 3,
            "reps": 15,
            "frequency": "Daily",
            "progression": "Add resistance"
          }
        ]
      }
    },

    {
      "id": "bar_not_over_midfoot",
      "name": "Barra Fora do Centro de Apoio",
      "name_en": "Bar Not Over Midfoot",
      "description": "Barra não mantém trajetória vertical sobre o meio do pé durante o movimento",
      "aliases": ["bar drift", "bar path deviation", "perda de verticalidade"],

      "biomechanical_cause": {
        "primary": "Combinação de múltiplos desvios técnicos",
        "secondary": [
          "Excessive forward lean",
          "Heel rise",
          "Improper setup"
        ],
        "risk_factors": [
          "Má técnica",
          "Mobilidade inadequada"
        ]
      },

      "detection_method": {
        "primary": "bar_x_position deviation > 5cm from midfoot_x throughout movement",
        "secondary": "tracking bar path in sagittal plane",
        "requires_landmarks": ["bar_position", "heel", "toe"],
        "calculation": "distance(bar_x, midfoot_x) over time",
        "detection_phase": "all phases"
      },

      "severity_thresholds": {
        "mild": {
          "deviation": "3-6 cm from vertical line",
          "injury_risk": "low",
          "performance_impact": "Reduced efficiency (10-15%)",
          "intervention": "Technical correction"
        },
        "moderate": {
          "deviation": "6-10 cm from vertical line",
          "injury_risk": "moderate (increased moment arms)",
          "performance_impact": "Significant efficiency loss (20-30%)",
          "intervention": "Address root cause (mobility/technique)"
        },
        "severe": {
          "deviation": ">10 cm from vertical line",
          "injury_risk": "high (loss of balance possible)",
          "performance_impact": "Major efficiency loss, instability",
          "intervention": "Reduce load, fundamental technique work"
        }
      },

      "evidence_base": {
        "biomechanical_impact": "Each cm of forward bar deviation increases lumbar moment by ~1% body weight (McGill SM, 2015)"
      },

      "corrective_protocol": {
        "immediate_cues": [
          "Bar straight up and down",
          "Keep bar over midfoot",
          "Drive vertically"
        ],
        "corrective_exercises": [
          {
            "name": "Tempo squats with vertical reference",
            "target": "Bar path awareness",
            "sets": 4,
            "reps": 5,
            "frequency": "Every session",
            "progression": "Increase load while maintaining path"
          }
        ]
      }
    },

    {
      "id": "hips_rise_first",
      "name": "Quadris Sobem Primeiro (Good Morning Pattern)",
      "name_en": "Hips Rise First (Good Morning Squat)",
      "description": "Quadris estendem primeiro no início da fase concêntrica, antes dos joelhos, causando aumento de inclinação do tronco",
      "aliases": ["good morning squat", "hips shoot up", "stripper squat", "quadril sobe antes"],

      "biomechanical_cause": {
        "primary": "Quadríceps fracos relativos à cadeia posterior",
        "secondary": [
          "Má coordenação motora",
          "Core fraco",
          "Carga excessiva",
          "Dominância de cadeia posterior"
        ],
        "risk_factors": [
          "Déficit de força de quadríceps",
          "Histórico de powerlifting (lowbar dominant)",
          "Ego lifting"
        ]
      },

      "detection_method": {
        "primary": "hip_extension_rate > knee_extension_rate in first 30% of concentric",
        "secondary": "trunk_angle_increase > 10° in early concentric",
        "requires_landmarks": ["hip", "knee", "shoulder"],
        "calculation": "compare(delta_hip_angle/dt, delta_knee_angle/dt) in concentric phase",
        "detection_phase": "early concentric (0-30%)"
      },

      "severity_thresholds": {
        "mild": {
          "hip_knee_extension_ratio": "1.2:1 (hips extend 20% faster)",
          "trunk_angle_increase": "5-10 degrees",
          "injury_risk": "low",
          "performance_impact": "Slightly inefficient",
          "intervention": "Cueing, pause squats"
        },
        "moderate": {
          "hip_knee_extension_ratio": "1.5:1 (hips extend 50% faster)",
          "trunk_angle_increase": "10-20 degrees",
          "injury_risk": "moderate (lumbar stress)",
          "performance_impact": "Significant efficiency loss, becomes good morning",
          "intervention": "Reduce load, quad strengthening"
        },
        "severe": {
          "hip_knee_extension_ratio": ">2:1 (hips extend 2x faster)",
          "trunk_angle_increase": ">20 degrees",
          "injury_risk": "high (spinal loading)",
          "performance_impact": "Essentially a good morning exercise, not a squat",
          "intervention": "Stop, address quad weakness aggressively"
        }
      },

      "associated_compensations": [
        "excessive_forward_lean",
        "bar_drift_forward"
      ],

      "evidence_base": {
        "prevalence": "20-35% with quad weakness (Flanagan SP, 2003)",
        "biomechanical_impact": "Shifts load from quads to lumbar extensors, increases spinal loading",
        "correction_efficacy": "Improves with quad strengthening and tempo training"
      },

      "corrective_protocol": {
        "immediate_cues": [
          "Chest up first",
          "Drive knees and hips together",
          "Think 'elevator', not 'hinge'"
        ],
        "corrective_exercises": [
          {
            "name": "Pause squats (3-second pause at bottom)",
            "target": "Eliminate momentum, force coordinated drive",
            "sets": 4,
            "reps": 5,
            "frequency": "Every squat session",
            "progression": "Increase load"
          },
          {
            "name": "Front squats",
            "target": "Force quad dominant pattern",
            "sets": 3,
            "reps": 6,
            "frequency": "2x/week",
            "progression": "Increase load"
          },
          {
            "name": "Leg press / leg extensions",
            "target": "Strengthen quads directly",
            "sets": 3,
            "reps": 10,
            "frequency": "2x/week",
            "progression": "Increase load"
          }
        ],
        "return_to_exercise_criteria": [
          "Can perform pause squats with coordinated drive",
          "Quad strength improved (can front squat 70%+ of back squat)"
        ]
      }
    },

    {
      "id": "excessive_stance_width",
      "name": "Stance Excessivamente Largo",
      "name_en": "Excessive Stance Width",
      "description": "Pés posicionados muito mais largos que largura dos ombros (mais apropriado para sumo)",
      "aliases": ["wide stance", "sumo stance", "stance muito aberto"],

      "biomechanical_cause": {
        "primary": "Compensação por mobilidade inadequada ou preferência técnica",
        "secondary": [
          "Tentativa de reduzir demanda de mobilidade",
          "Má instrução",
          "Confusão com powerlifting lowbar/sumo"
        ],
        "risk_factors": [
          "Limitação de mobilidade",
          "Falta de instrução"
        ]
      },

      "detection_method": {
        "primary": "stance_width > 1.5x shoulder_width",
        "secondary": "heel_to_heel_distance > 1.5x biacromial_distance",
        "requires_landmarks": ["heel_left", "heel_right", "shoulder_left", "shoulder_right"],
        "calculation": "distance(heel_left, heel_right) / distance(shoulder_left, shoulder_right)",
        "detection_phase": "setup and all phases"
      },

      "severity_thresholds": {
        "mild": {
          "stance_ratio": "1.3-1.5x shoulder width",
          "injury_risk": "low",
          "performance_impact": "Slight reduction in ROM, more hip adduction demand",
          "intervention": "May be acceptable for some individuals"
        },
        "moderate": {
          "stance_ratio": "1.5-2.0x shoulder width",
          "injury_risk": "moderate (adductor strain, hip impingement)",
          "performance_impact": "Significantly reduced ROM, becomes more sumo-like",
          "intervention": "Narrow stance gradually"
        },
        "severe": {
          "stance_ratio": ">2.0x shoulder width",
          "injury_risk": "high (adductor strain)",
          "performance_impact": "Minimal depth possible, wrong exercise selection",
          "intervention": "This is essentially a sumo squat, not highbar conventional"
        }
      },

      "evidence_base": {
        "biomechanical_impact": "Wider stance increases hip adduction moment, reduces ROM (Escamilla RF, 2001)"
      },

      "corrective_protocol": {
        "immediate_cues": [
          "Feet shoulder-width apart",
          "Toes slightly out (10-15°)",
          "Not sumo stance"
        ],
        "corrective_exercises": [
          {
            "name": "Bodyweight squats with stance markers",
            "target": "Relearn proper stance",
            "sets": 3,
            "reps": 15,
            "frequency": "Daily",
            "progression": "Add load gradually"
          }
        ]
      }
    },

