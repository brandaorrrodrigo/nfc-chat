{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "public": true,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://app.nutrifitcoach.com.br",
    "NEXT_PUBLIC_COMUNIDADES_URL": "https://chat.nutrifitcoach.com.br"
  }
}
